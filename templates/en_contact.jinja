{% extends "base.jinja" %}

{% block content %}
<div class="container-fluid p-0">
    <div class="header-section">
        <div class="header-text">
            <h1 class="text center mt-4 mb-3">Contact</h1>
        </div>
    </div>
</div>
<div class="container-fluid p-0">
    <div class="row p-5 justify-content-center">
        <div class="col-md-4 justify-content-center">
            <div class="container-fluid pb-5">
                <div class="card border-dark">
                    <div class="card-body row d-flex align-items-center">
                        <div class="col d-flex">
                            <img src="public/images/Logo-dotekem.png" alt="logo" class="w-auto">
                        </div>
                        <div class="col">
                            <h5 class="card-title mb-2">Michaela Clark</h5>
                            <p class="card-text mt-2 mb-2">m@dotekem.cz</p>
                            <p class="card-textmb-2">+420 723 277 132</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-8">
            <div class="container-fluid">
                <div class="card border-dark border-thick p-3">
                    <div class="card-body">
                        <h5 class="card-title mt-3 mb-0">Chcete si domluvit setkání? Napište mi!</h5>
                        <form class="p-3">
                            <div class="form-group mb-2">
                                <label for="name" class="mb-1">Jméno</label>
                                <input type="text" class="form-control" id="name" placeholder="Vaše jméno" required>
                            </div>
                            <div class="form-group mb-2">
                                <label for="email" class="mb-1">Email</label>
                                <input type="email" class="form-control" id="email" placeholder="Email" required>
                            </div>
                            <div class="form-group row mt-4 mb-2">
                                <label class="d-flex inline-block mb-1 col">Máte místo?</label>
                                <div class="col d-flex justify-content-start">
                                    <button type="button" class="btn btn-dark btn-sm btn-round text-white"
                                        data-bs-container="body" data-bs-toggle="popover" data-bs-placement="right"
                                        data-bs-content="Pokud nemáte místo u sebe doma, nebo jinde, můžu místo zařídit (pronajmout masérnu).">?
                                    </button>
                                </div>
                                <div class="row mb-2">
                                    <div class="form-check col">
                                        <input class="form-check-input" type="radio" name="flexRadioDefault"
                                            id="flexRadioDefault1" checked>
                                        <label class="form-check-label" for="flexRadioDefault1">
                                            ano
                                        </label>
                                    </div>
                                    <div class="form-check col">
                                        <input class="form-check-input" type="radio" name="flexRadioDefault"
                                            id="flexRadioDefault2">
                                        <label class="form-check-label" for="flexRadioDefault2">
                                            ne
                                        </label>
                                    </div>
                                </div>
                            </div>
                            <div class="form-group mt-3 mb-3">
                                <label class="mb-1">Které dny v týdnu preferujete?</label>
                                <div class="row">
                                    <div class="form-check col">
                                        <input class="form-check-input" type="checkbox" value="" id="flexCheckDefault">
                                        <label class="form-check-label" for="flexCheckDefault">
                                            Po
                                        </label>
                                    </div>
                                    <div class="form-check col">
                                        <input class="form-check-input" type="checkbox" value="" id="flexCheckDefault">
                                        <label class="form-check-label" for="flexCheckDefault">
                                            Út
                                        </label>
                                    </div>
                                    <div class="form-check col">
                                        <input class="form-check-input" type="checkbox" value="" id="flexCheckDefault">
                                        <label class="form-check-label" for="flexCheckDefault">
                                            St
                                        </label>
                                    </div>
                                    <div class="form-check col">
                                        <input class="form-check-input" type="checkbox" value="" id="flexCheckDefault">
                                        <label class="form-check-label" for="flexCheckDefault">
                                            Čt
                                        </label>
                                    </div>
                                    <div class="form-check col">
                                        <input class="form-check-input" type="checkbox" value="" id="flexCheckDefault">
                                        <label class="form-check-label" for="flexCheckDefault">
                                            Pá
                                        </label>
                                    </div>
                                </div>
                                <div class="form-group mt-3 mb-4">
                                    <label class="mb-1">Kdy máte obvykle čas?</label>
                                    <div class="row">
                                        <div class="form-check col">
                                            <input class="form-check-input" type="checkbox" value=""
                                                id="flexCheckDefault">
                                            <label class="form-check-label" for="flexCheckDefault">
                                                ráno
                                            </label>
                                        </div>
                                        <div class="form-check col">
                                            <input class="form-check-input" type="checkbox" value=""
                                                id="flexCheckDefault">
                                            <label class="form-check-label" for="flexCheckDefault">
                                                dopoledne
                                            </label>
                                        </div>
                                        <div class="form-check col">
                                            <input class="form-check-input" type="checkbox" value=""
                                                id="flexCheckDefault">
                                            <label class="form-check-label" for="flexCheckDefault">
                                                odpoledne
                                            </label>
                                        </div>
                                        <div class="form-check col">
                                            <input class="form-check-input" type="checkbox" value=""
                                                id="flexCheckDefault">
                                            <label class="form-check-label" for="flexCheckDefault">
                                                večer
                                            </label>
                                        </div>
                                        <div class="form-check col">
                                            <input class="form-check-input" type="checkbox" value=""
                                                id="flexCheckDefault">
                                            <label class="form-check-label" for="flexCheckDefault">
                                                kdykoliv
                                            </label>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="form-group mt-3 mb-2">
                                <label for="message" class="col mb-1">Zpráva od vás pro mě</label>
                                <textarea class="form-control" id="message" rows="4"
                                    placeholder="Tady můžete cokoliv upřesnit..." required></textarea>
                            </div>
                            <button type="submit" class="btn btn-send m-1">Odeslat</button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
    {% endblock %}